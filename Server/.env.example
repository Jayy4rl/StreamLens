# Network Configuration
NETWORK=mainnet
# Options: mainnet (50312) or testnet (5031)

# RPC Endpoints
MAINNET_RPC_URL=https://somnia-rpc.publicnode.com
TESTNET_RPC_URL=https://dream-rpc.somnia.network

# WebSocket Endpoints (for real-time monitoring)
MAINNET_WS_URL=wss://mainnet-ws.somnia.network
TESTNET_WS_URL=wss://testnet-ws.somnia.network

# Contract Addresses (auto-detected by SDK)
MAINNET_STREAMS_CONTRACT=0xC1d833a80469854a7450Dd187224b2ceE5ecE264
TESTNET_STREAMS_CONTRACT=0x0000000000000000000000000000000000000000

# Indexer Configuration
START_BLOCK=234833000
# Set to 0 to scan from genesis, or specify a block number to start from
BATCH_SIZE=1000
# Number of blocks to scan per batch

# Real-Time Monitoring Configuration
ENABLE_REALTIME=true
# Set to 'false' to disable real-time WebSocket monitoring

# Hybrid Mode: Periodic Historical Scans
HISTORICAL_SCAN_BLOCKS=10000
# Expected blocks to cover per periodic scan (used for logging)
HISTORICAL_SCAN_INTERVAL_MS=600000
# Interval in milliseconds for periodic catch-up scans (default: 10 minutes = 600000ms)
# 600000ms = 10 minutes, 1800000ms = 30 minutes, 3600000ms = 1 hour
# This ensures no events are missed even if real-time monitoring has issues

# Webhook Configuration (optional)
WEBHOOK_URL=
# URL to send webhook notifications (e.g., https://your-domain.com/api/webhooks)
WEBHOOK_EVENTS=schema.discovered,schema.indexed,schema.enriched
# Comma-separated list of events to trigger webhooks
WEBHOOK_SECRET=
# Optional: Bearer token for webhook authentication

# Optional: Only needed for write operations (not required for indexing)
PRIVATE_KEY=
PUBLIC_KEY=

# Database Configuration (Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here

DB_HOST=
DB_PORT=5432
DB_NAME=postgres
DB_USER=
DB_PASSWORD=
DB_SSL=true
DB_POOL_SIZE=10

# Supabase Configuration
SUPABASE_SERVICE_ROLE_KEY=
# Service role key (required for write operations)
SUPABASE_DB_URL=
# Direct PostgreSQL connection string
NEXT_PUBLIC_SUPABASE_URL=
# Supabase project URL
NEXT_PUBLIC_SUPABASE_ANON_KEY=
# Anon key (for read-only operations)
